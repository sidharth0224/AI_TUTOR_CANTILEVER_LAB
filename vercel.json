{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "framework": null,
    "functions": {
        "api/*.js": {
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/chat",
            "destination": "/api/chat"
        },
        {
            "source": "/api/topics",
            "destination": "/api/topics"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}